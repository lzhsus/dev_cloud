.topics-box {
}

.topics-item {
}

.topics-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
}

.topics-head-left {
    display: flex;
}

.topics-head-left .avatar {
    width: 78rpx;
    height: 78rpx;
}

.topics-head-left .userinfo {
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    justify-content: center;
}

.topics-head-left .userinfo .nickname {
    font-size: 15px;
    font-weight: 800;
}

.topics-head-left .userinfo .time {
    font-size: 10px;
    color: #767979;
}

.topics-head-right .status {
    background: #ff5959;
    color: #fff;
    font-size: 12px;
    padding: 6rpx 16rpx;
}

.imgtop-title {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    color: #fff;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2;
    font-size: 16px;
    line-height: 1.2;
}

.imgtop-title text {
    display: block;
    padding: 6px 10px;
}

.post-card-box {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    position: relative;
}

.card-video {
    position: relative;
    width: 400rpx;
    margin-left: 20rpx;
}

.card-video .img {
    width: 100%;
    display: block;
    height: auto;
}

.card-video::after {
    height: 60rpx;
    width: 60rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    content: "";
    background: url("http://rplay.eintone.com/weapp/static/addpost/play-02.png?v=201809131659");
    background-size: cover;
}

.post-card-box view {
    width: 250rpx;
    height: 250rpx;
    box-sizing: border-box;
    /* background: url("https://rfile.eintone.com/images/1878631519265690503.jpg") no-repeat center center;
            background-size: cover; */
    background: #eff0f6;
    border-right: 2px solid #fff;
    border-bottom: 2px solid #fff;
}

.post-card-box view image {
    width: 100%;
    height: 100%;
    display: block;
}

.post-card-box.grid-8 view:nth-child(1), .post-card-box.grid-8 view:nth-child(2) {
    width: 50%;
    height: 375rpx;
}

.post-card-box.grid-7 view:nth-child(1) {
    width: 100%;
    height: 375rpx;
}

.post-card-box.grid-5 view:nth-child(1), .post-card-box.grid-6 view:nth-child(1) {
    width: 500rpx;
    height: 500rpx;
}

.post-card-box.grid-5 view:nth-child(3), .post-card-box.grid-6 view:nth-child(3) {
    position: absolute;
    top: 250rpx;
    right: 0;
}

.post-card-box.grid-5 view:nth-child(4), .post-card-box.grid-5 view:nth-child(5) {
    width: 50%;
}

.post-card-box.grid-4 view {
    width: 50%;
    height: 375rpx;
}

.post-card-box.grid-3 view {
    width: 100%;
    height: 375rpx;
}

.post-card-box.grid-2 view {
    width: 50%;
    height: 375rpx;
}

.post-card-box.grid-1 view {
    width: 100%;
    height: 750rpx;
    border-bottom: 0 solid #fff;
}

.post-card-box.grid-3 view:nth-child(2), .post-card-box.grid-3 view:nth-child(3) {
    width: 375rpx;
}

.post-card-box view:last-child, .post-card-box.grid-3 view:nth-child(1),
.post-card-box.grid-4 view:nth-child(2), .post-card-box.grid-4 view:nth-child(4),
.post-card-box.grid-5 view:nth-child(2), .post-card-box.grid-5 view:nth-child(3),
.post-card-box.grid-6 view:nth-child(2), .post-card-box.grid-6 view:nth-child(3),
.post-card-box.grid-7 view:nth-child(4), .post-card-box.grid-8 view:nth-child(2),
.post-card-box.grid-8 view:nth-child(5),
.post-card-box.grid-9 view:nth-child(3n+3) {
    border-right: none;
}

.post-card-box.grid-2 view:nth-child(n+1),
.post-card-box.grid-3 view:nth-child(n+2),
.post-card-box.grid-4 view:nth-child(n+3),
.post-card-box.grid-5 view:nth-child(n+4),
.post-card-box.grid-6 view:nth-child(n+4),
.post-card-box.grid-7 view:nth-child(n+5),
.post-card-box.grid-8 view:nth-child(n+6),
.post-card-box.grid-9 view:nth-child(n+7) {
    border-bottom: none;
}

.zan-box {
    width: 700rpx;
    margin: 0 auto;
    overflow: hidden;
    padding: 20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.avatar-list {
    width: 536rpx;
    overflow: hidden;
}

.avatar-list .avatar {
    width: 52rpx;
    height: 52rpx;
    margin-right: 3px;
    float: left;
    background: #898989;
    border-radius: 2px;
}

.avatar-list  .num {
