.page-content{
    padding: 20rpx;box-sizing: border-box;
    display: flex;justify-content: flex-start;align-items: flex-start;
    flex-wrap: wrap;
}
.page-content .li{
    width: 220rpx;height: 220rpx;
    border-radius: 4px;
    margin-bottom: 20rpx;
    box-shadow: 0 0 4px #ccc;
    position: relative;
}
.page-content .li:nth-child(3n-1) {
    margin: 0 25rpx;
}
.page-content .li .img{
    width: 100%;height: 100%;
    background-size:cover;
    border-radius: 5rpx;
    overflow: hidden; 
    display: flex;justify-content: center;align-items: center;
}
.page-content .li .img .image{
    display: block;width: 100%;
}
                 
/*  */
.add-img{
    position: fixed;bottom: 30rpx;right: 30rpx;z-index: 999999;
    width: 60rpx;height: 60rpx;
    background: #fff;
    padding: 12rpx;box-sizing: border-box;
    border-radius: 12rpx;overflow: hidden;
    display: flex;justify-content: center;align-items: center;
}
.add-img image{
    display: block;width: 100%;
}
.pop-content{
    position: fixed;top: 0;left: 0;z-index: 99;
    width: 100%;height: 100%;
    background-color:rgba(0,0,0,0.4);

}
.images-box-pop{
    position: relative;top: 50%;left: 50%;z-index: 99999;
    transform: translate(-50%,-50%);
    width: 700rpx;min-height: 420rpx;
    background: #fff;opacity: 1;
    padding: 40rpx 25rpx 140rpx;box-sizing: border-box;
    display: flex;justify-content: flex-start;align-items: flex-start;
    flex-wrap: wrap;
    border-radius: 20rpx;
}
.images-box-pop::after{
    display: block;content: '';
    position: absolute;bottom: 120rpx;left: 50%;
    transform: translateX(-50%);
    width: 650rpx;height: 1px;
    background: rgb(243, 242, 242);
}
.images-box-pop .submit{
    position: absolute;bottom: 20rpx;left: 50%;
    transform: translateX(-50%);
    width: 290rpx;
    border-radius: 10px;overflow: hidden;
    box-shadow: 0 0 4px #ccc;
    
}
.images-box-pop .submit image{
    display:block;width:100%;
}
.images-box-pop .item-li{
    width: 200rpx;height: 200rpx;
    border-radius: 4px;
    margin-bottom: 20rpx;
    box-shadow: 0 0 4px #ccc;
    position: relative;
}
.images-box-pop .item-li .close{
    position: absolute;top: -20rpx;right: -20rpx;
    width: 40rpx;height: 40rpx;
    border-radius: 50%;
    box-shadow: 0 0 4px #ccc;
    background: url(https://6465-demo-yk46q-1301447037.tcb.qcloud.la/close-icon.png?sign=977ad0ce95f4a7a653a37bc982c8f5e0&t=1584007390) center center no-repeat;
    background-size: cover;
}
.images-box-pop .item-li .img-box{
    width: 100%;height: 100%;overflow: hidden;
    display: flex;justify-content: center;align-items: center;
}
.images-box-pop .item-li image{
    display: block;width: 100%;
}
.images-box-pop .item-li:nth-child(3n-1) {
    margin: 0 25rpx;
}
.images-box-pop .item-li:nth-of-type(7) {
    margin-bottom: 0;
}
.images-box-pop .item-li:nth-of-type(8) {
    margin-bottom: 0;
}
.images-box-pop .item-li:nth-of-type(9) {
    margin-bottom: 0;
}