    height: 52rpx;
    background: #efefef;
    font-size: 10px;
    line-height: 52rpx;
    display: block;
    float: left;
    text-align: center;
    border-radius: 2px;
    color: #858585;
}

.zan {
    width: 70rpx;
    height: 46rpx;
    border-radius: 20rpx;
    position: relative;
    background: #efefef url("http://rplay.eintone.com/weapp/static/index/icon-01.png?v=2") no-repeat center top;
    background-size: 39rpx auto;
}

.zan::after {
    border: 0;
}

.zan   button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.this {
    background-position: center bottom;
}

.share {
    width: 70rpx;
    height: 46rpx;
    border-radius: 20rpx;
    background: #efefef url("http://rplay.eintone.com/weapp/static/index/share-icon.png") no-repeat center;
    background-size: 40rpx auto;
}

.share::after {
    border: 0;
}

.label-list {
    width: 700rpx;
    margin: 0 auto;
    font-size: 12px;
    overflow: hidden;
}

text {
    background: #f2f2f2;
    border-radius: 2px;
    color: #6f6f6f;
    display: block;
    padding: 6rpx 15rpx;
    margin: 0 10rpx 10rpx 0;
