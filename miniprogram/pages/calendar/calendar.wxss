/* pages/calendar/calendar.wxss */
page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
#calendar-page {
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    flex: 1;
}

.calendar-page-container {
    width: 710rpx;height: 100%;margin:auto;
    display: flex;justify-content: flex-start;flex-direction: column;flex: 1;
}

.calendar-box{
    margin-top: 20rpx;
    width: 100%;min-height: 300rpx;
    border-radius: 8px;overflow: hidden;
    display: flex;justify-content: space-around;align-items: center;
    flex-direction: column;
    background:#fff;
    position: relative;
}

.calendar-box .new-day{
    position: absolute;top: 30rpx;left: 30rpx;
    background: orange;
    width: 80rpx;height: 80rpx;
    text-align: center;line-height: 80rpx;
    border-radius: 50%;
    font-size: 11px;color: #fff;
}
.calendar_title{
    width: 60%; margin: 40rpx auto; 
    display: flex;justify-content: space-between;align-items: center;
    font-size: 24px;color: #666;
    position: relative;
}
.calendar_title .icon{
   
}

/* 日历 */
.calendar{
    width: 100%;
    border-bottom-right-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
    padding: 0 0 20rpx;
}
.header{
    font-size: 0;width: 80%;margin: 0 auto;
}
.header>view{
    display: inline-block;width: 14.285%;
    color: #666;font-size: 30rpx;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 20rpx 0;
}
.weekMark{
    position: relative;width: 80%;margin: 0 auto;
}
.weekMark view{
    position: absolute;bottom: -1px;left: 0;
    width: 100%;border-bottom: 2px solid #69f;
}
.date-box{
    font-size: 0;padding: 10rpx 0;
    width: 80%;margin: 0 auto;
    display: flex;justify-content: flex-start;align-items: flex-start;
    flex-wrap: wrap;
}
.date-box>view{
    position: relative;display: inline-block;
    width:77rpx;height: 77rpx;line-height: 77rpx;
    margin:1px;text-align: center;
    color: #666;text-align: center;
    vertical-align: middle;
    background: rgb(248, 248, 248);
    display: flex;justify-content: center;align-items: center;
}
.date-head{
    
    border-radius: 2px;overflow: hidden;
    width:77rpx;height: 75rpx;
    font-size: 12pt;text-align: center;line-height: 77rpx;
}
.nowDay .date-head{
    /* background: #ff9933; */
    height: 98%;width: 98%;
    border: 1rpx solid red;
    
    /* box-shadow: 0 0 5px #888888 inset; */
    color: #000;
}
.nowDayClick .date-head{
    height: 75rpx;
    /* box-shadow: 0 0 5px #f15757 inset; */

    border: 1rpx solid red;
}
.date-box>view .item-color{
    color: #1296db;
}
.date-box>view .item-color1{
    color: #fff;
    background: #ff9933;
}
.nowDay .date-head>view.item-color1{
    color: #fff;
    background: transparent;
}
.date-box>view .item-color2{
    color: #fff;
    background: #f8cbf2;
}
.date-box>view .item-color3{
    color: red;
}
.date-box>view .item-color5{
    background: #e6e488;
}
.static-box{
    width: 100%;background: #fff;
    display: flex;justify-content: space-between;align-items: center;
    padding: 20rpx 40rpx;box-sizing: border-box;
    font-size: 14px;
    margin:12rpx 0;
    border-radius: 4px;overflow: hidden;
}
.static-box .li:nth-of-type(1){
    font-size: 12px;color: #ff9933;
}
.static-box .li:nth-of-type(2){
    font-size: 12px;color: #f8cbf2;
}
.static-box .li:nth-of-type(3){
    font-size: 12px;color: red;
}
.static-box .li:nth-of-type(4){
    font-size: 12px;color: #1296db;
}
.static-box .li:nth-of-type(5){
    font-size: 12px;color: #e6e488;
}
.radio-box{
    margin:20rpx 0;
    width: 100%;height: 100rpx;
    border-radius: 8px;overflow: hidden;
    display: flex;justify-content: space-around;align-items: center;
    background: #fff;
    position: relative;
}
.radio-box .name{
    font-size: 16px;color: rgb(175, 174, 174);
    font-weight: bold;
    position: relative;
}
.radio-box .name::before{
    display: block;content: '';
    position: absolute;top: 50%;left: -52rpx;
    transform: translateY(-50%);
    width: 42rpx;height: 42rpx;
    background: url(https://6465-demo-yk46q-1301447037.tcb.qcloud.la/icon-item.png?sign=4c241a717db7e88ac2916d4c93950347&t=1583240992) center center no-repeat;
    background-size: cover;
}
.radio-box .show{
    position: absolute;top: 0;left: 0;
    width: 100%;height: 100%;
}
.radio-box .radio{
    position: relative;
    width: 180rpx;height: 60rpx;
    border-radius: 6px;overflow: hidden;
    background: #dcdcdc;
    display: flex;justify-content: space-between;align-items: center;
}
.radio-box .radio .item{
    width: 50%;height: 100%;
    font-size:12px;color: #fff;
    background: #dcdcdc;
    display: flex;justify-content: center;align-items: center;
}
.radio-box .radio .item.active_one{
    background: #ff75ba;
    border-radius: 6px;
}
.radio-box .radio .item.active_tow{
    background: #ff75ba;
    border-radius: 6px;
}

.radio-box .radio .picker{
    position: absolute;top: 0;left: 0;
    width: 180rpx;height: 60rpx;
}
.msg-box{
    padding: 20rpx;box-sizing: border-box;
    display: flex;justify-content: center;align-items: center;
    font-size: 20px;color: red;
}