/* pages/detail/detail.wxss */
.page-content{
    width: 100%;
    padding: 20rpx;box-sizing: border-box;
}
.top-box{
    padding: 12rpx 0;box-sizing: border-box;
}
.top-box .title{
    font-size: 30px;color: #000;font-weight: bold;
    text-align: left;
}
.source-box{
    padding: 14rpx 0;box-sizing: border-box;
    display: flex;justify-content: flex-start;align-items: center;

}
.source-box .source{
    font-size: 16px;color: #000;
    margin-right: 12rpx;
}
.source-box .time{
    font-size: 12px;color: #ccc;
}
.share-digest{
    padding: 12rpx 0;box-sizing: border-box;
    font-size: 14px;color: rgb(44, 43, 43);
}
.reply-board{
    padding: 12rpx 0;box-sizing: border-box;
    font-size: 12px;
    display: flex;justify-content: flex-start;align-items: center;
    margin: 0 12rpx;
}
.reply-board .title{
    color: red;
    margin-right: 4px;
}

.reply-board .num{
    color: green;
}
.img-box{
    padding: 12rpx 0;box-sizing: border-box;
}
.img-box image{
    display: block;width: 100%;
}
.relative_res{
    padding: 12rpx 0;box-sizing: border-box;
}
.relative_res .ul{
    display: flex;justify-content: center;
    flex-direction: column;
}
.relative_res .ul .li{
    display: flex;justify-content: flex-start;align-items: flex-start;
    flex-direction: column;
    padding-bottom: 20rpx;box-sizing: border-box;
    border-bottom: 1px solid rgb(224, 218, 218);
    margin-top: 30rpx;
}
.relative_res .ul .li:first-child{
    margin-top: 0;
}
.relative_res .ul .li .title{
    font-size: 14px;color: #000;
    padding: 4px 0;box-sizing: border-box;
}
.relative_res .ul .li .hint{
    font-size: 12px;color: #ccc;
    padding: 4px 0;box-sizing: border-box;
}
.relative_res .ul .li .digest{
    font-size: 12px;color: rgb(63, 61, 61);
    padding: 4px 0;box-sizing: border-box;
}
.relative_res .ul .li .img-box{
    display: flex;justify-content: flex-start;align-items: flex-start;
    width: 100%;
}
.relative_res .ul .li .img-box image{
    display: block;width: 100%;
}
.spinfo-box{
    padding: 12rpx 0;box-sizing: border-box;
    display: flex;justify-content: flex-start;
    flex-direction: column;
}
.spinfo-box .item-box{
    display: flex;justify-content: flex-start;
    flex-direction: column;
}
.spinfo-box .item-box .title{
    font-size: 24px;color: #000;
    border-left: 6px solid #000;
    padding-left: 20rpx;
}
.spinfo-box .item-box .main{
    padding: 12rpx 0;box-sizing: border-box;
    font-size: 14px;color: rgb(44, 43, 43);
}
.topiclist_news{
    padding: 20rpx 0;box-sizing: border-box;
    display: flex;justify-content: flex-start;align-items: flex-start;

    flex-wrap: wrap;
}
.topiclist_news .li{
    width: 140rpx;height: 140rpx;
    border-radius: 12rpx;overflow: hidden;
    box-shadow: 0 0 12px #ccc;
    text-align: center;line-height: 140rpx;
    font-size: 14px;color: #ccc;
    margin-right: 14px;
}
.topiclist_news .li:nth-child(4n-3){ margin-left: 14px;} 
.statement{
    padding: 20rpx 0 ;box-sizing: border-box;
    display: flex;justify-content: space-between;align-items: center;
    font-size: 14px;color: #ccc;

}
.foder{
    padding: 40rpx 0 ;box-sizing: border-box;
    display: flex;justify-content: space-between;align-items: center;
}
.foder .name{
    font-size: 14px;color: #ccc;
}
.foder .linke{
    font-size: 14px;color: #ccc;
}
