/* pages/periodset/periodset.wxss */
page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
#periodset-page {
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    flex: 1;
}

.periodset-page-container {
    width: 710rpx;height: 100%;margin:30rpx auto;
    display: flex;justify-content: flex-start;flex-direction: column;flex: 1;
}
.ul{

}
.ul .li{
    margin-bottom: 20rpx;
}
.ul .li-name{
    font-size: 12px;color: #999;
}
.ul .li-item{
    margin-top: 12rpx;
    font-size: 14px;color: #000;
    display: flex;align-items: center;
    position: relative;
    width: 100%;height: 80rpx;
    background:#fff;
    border-radius: 6px;overflow: hidden;
    padding: 0 20rpx;box-sizing: border-box;
}
.ul .li-item::after{
    position: absolute;right: 40rpx;top: 50%;
    display: block;content: '';
    width: 20rpx;height: 20rpx;
    border-top: 1px solid #999;
    border-right: 1px solid #999;
    transform: rotate(45deg) translateY(-80%);
}

.ul .li-item picker{
    position: absolute;top: 0;left: 0;
    width: 100%;height: 100%;
}
.ul .li-item picker .picker{
    position: absolute;top: 0;left: 0;
    width: 100%;height: 100%;
    text-align: right;
    padding-right: 60rpx;box-sizing: border-box;
    line-height: 80rpx;
    font-size: 18px;
}
.ul .li-item .picker-show{
    position: absolute;top: 0;left: 0;
    width: 100%;height: 100%;
    text-align: right;
    padding-right: 60rpx;box-sizing: border-box;
    line-height: 80rpx;
    font-size: 18px;
}